pipeline {
    agent any

    tools {
        maven 'maven'
        jdk 'JDK'
    }

    environment {
        DOCKER_IMAGE_NAME = "ecommerce-store"
    }

    stages {
        stage('Start') {
            steps {
                echo 'üöÄ D√©marrage du pipeline CI/CD'
            }
        }

        stage('ScrutationSCM') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/develop']],
                    extensions: [],
                    userRemoteConfigs: [[
                        url: 'https://github.com/Badrbernane/Store_Ecommerce.git',
                        credentialsId: 'github-token'
                    ]]
                ])
            }
        }

        stage('Build') {
            parallel {
                stage('Build With Maven') {
                    steps {
                        dir('Ecommerce_Store') {
                            bat 'mvn clean install -DskipTests'
                        }
                    }
                }
                stage('Build With Gradle') {
                    steps {
                        echo 'Gradle non utilis√© dans ce projet'
                    }
                }
            }
        }

        stage('Test') {
            parallel {
                stage('JUnit') {
                    steps {
                        dir('Ecommerce_Store') {
                            echo 'üìã G√©n√©ration des rapports JUnit'
                            bat 'mvn test'
                            junit 'target/surefire-reports/*.xml'
                        }
                    }
                }
                stage('Functional testing') {
                    steps {
                        echo 'üîç Tests fonctionnels manquants ‚Äî √† d√©finir si besoin'
                    }
                }
                stage('Performance testing') {
                    steps {
                        echo '‚öôÔ∏è Ex√©cution des tests de performance (placeholder)'
                    }
                }
            }
        }

        stage('Analyse du code') {
            parallel {
                stage('Checkstyle') {
                    steps {
                        dir('Ecommerce_Store') {
                            bat 'mvn checkstyle:checkstyle'
                        }
                    }
                }
                stage('PMD') {
                    steps {
                        dir('Ecommerce_Store') {
                            bat 'mvn pmd:pmd'
                        }
                    }
                }
            }
        }

        stage('JavaDoc') {
            steps {
                dir('Ecommerce_Store') {
                    bat 'mvn javadoc:javadoc'
                }
            }
        }

        stage('Packaging') {
            steps {
                dir('Ecommerce_Store') {
                    echo 'üì¶ Packaging de l‚Äôapplication'
                    archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
                }
            }
        }

        stage('Archivage') {
            parallel {
                stage('Nexus') {
                    steps {
                        dir('Ecommerce_Store') {
                            bat 'mvn deploy'
                        }
                    }
                }
                stage('Artifactory') {
                    steps {
                        echo 'üì¶ Publication vers Artifactory (placeholder si utilis√©)'
                    }
                }
            }
        }

        stage('D√©ploiement') {
            steps {
                dir('Ecommerce_Store') {
                    script {
                        def tag = "${env.BUILD_NUMBER}"

                        // ‚úÖ √âtape 1 : Construire une image Docker
                        echo "üîß Construction de l‚Äôimage Docker : ${DOCKER_IMAGE_NAME}:${tag}"
                        def image = docker.build("${DOCKER_IMAGE_NAME}:${tag}")

                        // ‚úÖ √âtape 2 : Publier l‚Äôimage Docker sur Docker Hub
                        withDockerRegistry([credentialsId: 'dockerhub-credentials', url: '']) {
                            echo "üì§ Publication de l‚Äôimage Docker vers Docker Hub"
                            image.push("${tag}")
                            image.push("latest")
                        }
                    }
                }
            }
        }

        stage('End') {
            steps {
                echo '‚úÖ Pipeline CI/CD termin√© avec succ√®s !'
            }
        }
    }

    post {
        always {
            cleanWs()
        }
        success {
            emailext(
                to: 'sohaybelbakali@gmail.com',
                subject: "‚úÖ Succ√®s Pipeline ${JOB_NAME} #${BUILD_NUMBER}",
                body: """
Le pipeline s'est termin√© avec succ√®s.

üîß Job: ${JOB_NAME}
üî¢ Build: #${BUILD_NUMBER}
üîó URL: ${BUILD_URL}
"""
            )
        }
        failure {
            emailext(
                to: 'sohaybelbakali@gmail.com',
                subject: "‚ùå √âCHEC Pipeline ${JOB_NAME} #${BUILD_NUMBER}",
                body: """
Le pipeline a √©chou√© √† l'√©tape ${currentBuild.currentResult}. 

üîß Job: ${JOB_NAME}
üî¢ Build: #${BUILD_NUMBER}
üîó URL: ${BUILD_URL}

Veuillez consulter le journal en pi√®ce jointe pour les d√©tails.
""", attachLog: true
            )
        }
    }
}
